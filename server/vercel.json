{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "buildCommand": "chmod +x api/build.sh && ./api/build.sh"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/index.py"
        }
    ],
    "env": {
        "PYTHON_VERSION": "3.9"
    }
} 